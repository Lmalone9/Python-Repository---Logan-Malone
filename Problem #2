import math

pizzaslices = 8
family = 4

person1 = int(input("how many slices of pizza did you eat: "))
person2 = int(input("how many slices of pizza did you eat: "))
person3 = int(input("how many slices of pizza did you eat: "))
person4 = int(input("how many slices of pizza did you eat: "))


totalslices = person1 + person2 + person3 + person4


wholepizzas = math.ceil(totalslices/pizzaslices)


leftbymodulo = totalslices%pizzaslices

print("Total number of pizzas to buy", wholepizzas)

print("Total slices left", leftbymodulo)
